@model IEnumerable<TaskInsider.ClientPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhotoFileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoFileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientPhotoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClientPhotoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientPhotoID })
        </td>
    </tr>
}

</table>
